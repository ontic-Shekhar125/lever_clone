<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Homepage</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script src="/js/navbar.js" defer></script>
    <script src="/js/navElement.js" defer></script>
    <script src="/js/tableHeader.js" defer></script>
    <!-- Link to your custom elements JS file -->
    <script src="/js/tableColumn.js" defer></script>
    <!-- Link to your custom elements JS file -->
    <script src="/js/tableElement.js" defer></script>
    <!-- Link to your custom elements JS file -->
    <style>
      .table-container {
        min-height: 270px; /* Ensuring all tables have the same height */
      }
    </style>
  </head>
  <body>
    <custom-nav data-flag="<%- flag %>" data-index="<%- index %>"></custom-nav>
    <!-- Main Content -->
    <div class="container mx-auto mt-6 px-2">
      <!-- Grid for Tables -->
      <div class="grid grid-cols-2 gap-3">
        <!-- Upcoming Interviews Table -->
        <div class="table-container bg-white shadow-md rounded-lg p-4">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">Upcoming Interviews</h2>
            <div class="flex flex-col gap-2 shrink-0 sm:flex-row">
              <button
                class="rounded border border-slate-300 py-2.5 px-3 text-center text-xs font-semibold text-slate-600 transition-all hover:opacity-75 focus:ring focus:ring-slate-300 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                type="button"
              >
                <a href="jobs">View All </a>
              </button>
            </div>
          </div>
          <div class="overflow-auto max-h-50">
            <!-- Scrollable Wrapper -->

            <custom-table
              data-interviews="<%- JSON.stringify(interviews) %>"
              data-headers="<%- JSON.stringify(headers) %>"
            >
            </custom-table>
          </div>
        </div>

        <!-- My Referrals Table -->
        <div class="table-container bg-white shadow-md rounded-lg p-4">
          <h2 class="text-lg font-semibold mb-2">My Referrals</h2>
          <custom-table data-name="My Referrals"></custom-table>
        </div>

        <!-- Pending Feedback Table -->
        <div class="table-container bg-white shadow-md rounded-lg p-4">
          <h2 class="text-lg font-semibold mb-2">Pending Feedback</h2>
          <custom-table data-name="Pending Feedback"></custom-table>
        </div>

        <!-- Completed Feedback Table -->
        <div class="table-container bg-white shadow-md rounded-lg p-4">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">Completed Interviews</h2>
            <div class="flex flex-col gap-2 shrink-0 sm:flex-row">
              <button
                class="rounded border border-slate-300 py-2.5 px-3 text-center text-xs font-semibold text-slate-600 transition-all hover:opacity-75 focus:ring focus:ring-slate-300 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                type="button"
              >
                <a href="/comInterviews">View All </a>
              </button>
            </div>
          </div>
          <div class="overflow-auto max-h-50">
            <!-- Scrollable Wrapper -->

            <custom-table
              data-interviews="<%- JSON.stringify(interviews) %>"
              data-headers="<%- JSON.stringify(headers) %>"
            >
            </custom-table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
